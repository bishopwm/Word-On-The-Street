
<%= form_tag("/map", method: 'get' ) do %>
	Search <%= text_field_tag('q') %>
	<%= hidden_field_tag('latitude', nil, { :id => 'lat' }) %>
	<%= hidden_field_tag('longitude', nil, { :id => 'lon' }) %>
	<%= submit_tag "Submit" %>
<% end %>

<script type="text/javascript">
$(function () {
	if ("geolocation" in navigator) {
	  getLocation();
	} else {
	  alert("Geolocation is not available")
	}	
})
</script>

